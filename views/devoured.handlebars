<h1>Update the list to show devoured {{this.devoured}}</h1>

<form data-id="{{this.id}}" class="update-form">

  <div class="form-group">
    <label for="auth">Burger</label>
    <input type="text" id="auth" name="author" value="{{this.burger_name}}">
  </div>

  <div class="form-group">
    <label for="quo">Devoured:</label>
    <textarea id="quo" name="quote" rows="8" cols="40">{{this.devoured}}</textarea>
  </div>

  <button type="submit">Update Burger</button>
</form>
