<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger devoured=true}} 
       <form method ="POST" action = "/api/burgers?_method= PUT" class = "button-size">
      <input type = "hidden" name = "burger_name" type ="text" value = {{this.burger_name}}>
      <br>
      <button type ="submit" class = "btn btn-default">Devour It.</button> 
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
