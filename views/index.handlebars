<h1>Burgers App</h1>

<p>Manage burgers with this app</p>
 
  {{#each burger_data}}
  {{#unless this.devoured}}
<div class ="col-xs-9 text-center">
  <p>{{this.id}} {{this.burger_name}}</p>
</div>
<div class ="col-xs-3 text-center">
<form method= "POST" action="/burgers/update?_method=POST"
  class="button-size">

<button type="submit" class ="btn btn-default">
 DEVOUR BURGER!</button>


</form>
  </div>
  {{/unless}}
  {{/each}}
  </div>
    

{{!-- if devoured is true, this code will send the burger from the pending to the devoured list. this is an if/else handlebars version --}}
          <div class ="col=xs=6 text-center" class="task">
           {{#each burger_data}}
             {{#if this.devoured}}
               <input class="form-control" type ="text" placeholder ="{{this.id}} {{this.burger_name}}">
              {{/if}}
            {{/each}}    
      </div>
    </div>
</div>


{{!-- This is the button for you to add a burger you'd like to eat --}}
<form class="create-form">
  <div class="form-group">
    <label for="new">burger:</label>
    <input type="text" id="new" name="burger_name">
  </div>
      <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
      </form>
      <p>Enter a burger you would like to devour</p>
    </div>
  </div>
</div>




