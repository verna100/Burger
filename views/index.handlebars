<h1>Burgers App</h1>

<p>Manage burgers with this app</p>
<div class= "container">
  <div class ="row">
    <div class ="col-xs-12 text-center" id= "top-bar">
    </div>
    <div class ="col-xs-6 text-center" class ="task">
      <div class ="row">
         {{#each burger_data}}
            {{#unless this.devoured}}
            <div class ="col-xs-9 text-center">
              <pre>{{this.id}} {{this.burger_name}}</pre>
            </div>
          <div class ="col-xs-3 text-center">
            <form method= "POST" action="/burgers/update?_method=PUT"
            class="button-size">
            <button type="submit" class ="btn btn-default">
              DEVOUR BURGER!</button>
            </form>
          </div>
          {{/unless}}
          {{/each}}
      </div>
    </div>

{{!-- if devoured is true, this code will send the burger from the pending to the devoured list. this is an if/else handlebars version --}}
          <div class ="col=xs=6 text-center" class="task">
           {{#each burger_data}}
             {{#if this.devoured}}
               <input class="form-control" type ="text" placeholder ="{{this.id}} {{this.burger_name}}" readonly>
              {{/if}}
            {{/each}}    
      </div>
    </div>
</div>


{{!-- This is the button for you to add a burger you'd like to eat --}}

<div class ="container">
  <div class="row">
    <div class ="col-xs-12 text-center enter_section">
      <form action="/burgers/create" method="POST">
      <input type="text" name="burger_name" class ="form-control"
      value="" id="enter_text">
      <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
      </form>
      <p>Enter a burger you would like to devour</p>
    </div>
  </div>
</div>




